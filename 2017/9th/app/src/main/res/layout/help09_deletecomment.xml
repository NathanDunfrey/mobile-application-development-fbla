<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/help09_deletecomment"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        android:background="#ffffff">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6CA0D7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to Delete Comment:"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textSize="24sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Find desired comment"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_margin="10dp"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Press the red &quot;X&quot; on the comment you want to delete"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_margin="10dp"
                android:textSize="20sp"/>
				
			<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Press &quot;Confirm&quot; to delete comment"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_margin="10dp"
                android:textSize="20sp"/>
				
			<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. OR press &quot;Cancel&quot; to not delete comment"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_margin="10dp"
                android:textSize="20sp"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>