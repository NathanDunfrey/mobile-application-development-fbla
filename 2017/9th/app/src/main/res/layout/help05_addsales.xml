<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/help05_addsales"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        android:background="#ffffff">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6CA0D7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How to Add Sales:"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textSize="24sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Go to Home page"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_margin="10dp"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Press &quot;Add Sales&quot;"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_margin="10dp"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Enter required information (Item Name and Item Price)"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_margin="10dp"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Enter optional information (Item Description and Picture from Camera or Gallery)"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_margin="10dp"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Press &quot;Finish&quot; to upload item and close activity"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_margin="10dp"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. OR press &quot;Add Another&quot; to upload item and restart activity"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_margin="10dp"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7. OR press &quot;Cancel&quot; to not upload item and close activity"
                android:textColor="#ffffff"
                android:gravity="left"
                android:layout_margin="10dp"
                android:textSize="20sp"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>